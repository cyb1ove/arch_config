" Autocomplete using Firefox Awesomebar subsystem
set complete=l

" Set the external text editor
set editor="urxvt vim"

" Set hintinputs
set hintchars="asdfghjkl"

" Config Vimperator statusline
set status="input,location,bookmark,history,ssl,tabcount"

" Always on statusline
set statuslinevisibility="visible"

set showstatuslinks=3

" Toogle Tree Tabs Sidebar
noremap t :javascript SidebarUI.toggle("treetabs_jagiello_it-sidebar-action")<CR>

" Map restart firefox
noremap R :restart<CR>


" Map scroll page 
noremap <S-j> G
noremap <S-k> gg
noremap <S-h> 0
noremap <S-l> $

" Map navigation
noremap <C-S-h> :back! ><CR>
noremap <C-S-l> :forward! <<CR>
noremap <C-h> :back<CR>
noremap <C-l> :forward<CR>
noremap <C-j> gu
noremap <C-J> gU

" Map opening web pages
noremap oo :open 
noremap oJ :tabopen
noremap uu O
noremap uJ T
noremap pp p
noremap pJ P

" Map dublicate web pages
noremap d :tabdplicate<CR>

" Map remove web pages
noremap cc :quit<CR>
noremap ck :removetabsleft<CR>
noremap cj :removetabsright<CR>

noremap sp :pageinfo<CR>

" Remap zoom
noremap zk zi
noremap zl zm
noremap zj zo
noremap zh zr
noremap zK zI
noremap zL zM
noremap zJ zO
noremap zH zR

" Remap console jumps in history
cnoremap <A-S-k> <S-Up>
cnoremap <A-S-l> <S-Down>
cnoremap <A-k> <Up>
cnoremap <A-j> <Down>

" Remap switching tabs
noremap <A-S-k> g@
noremap <A-j> gt
noremap <A-k> gT
